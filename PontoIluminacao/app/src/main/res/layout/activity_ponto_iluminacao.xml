<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/idPonto_Iluminacao"
    tools:context=".PontoIluminacaoActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idponto_edt_data"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/edt_customizado"
                    android:hint="Data substituição"
                    android:maxLines="1"
                    android:maxLength="11"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:focusable="true"
                    android:paddingStart="16dp"
                    android:fontFamily="@font/roboto_regular"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Idponto_edt_Municipio"
                    android:text="Jaboatão dos Guararapes"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:enabled="false"
                    android:background="@drawable/edt_customizado"
                    android:hint="Município"
                    android:imeOptions="actionNext"
                    android:inputType="textAutoComplete"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:paddingStart="16dp"
                    android:fontFamily="@font/roboto_regular"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Idponto_edt_Distrito"
                    android:text="Regional Único"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:enabled="false"
                    android:background="@drawable/edt_customizado"
                    android:hint="Distrito"
                    android:imeOptions="actionNext"
                    android:inputType="textAutoComplete"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:paddingStart="16dp"
                    android:fontFamily="@font/roboto_regular"/>

            </com.google.android.material.textfield.TextInputLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/btn_ponto_cust">

                <Button
                    android:id="@+id/Idponto_btn_Bairro"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@null"
                    android:text="Bairros"
                    android:paddingStart="16dp"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorWhite"/>

                <ImageView
                    android:id="@+id/ic"
                    android:background="@drawable/ic_arrow_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="end|center"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_ponto_cust"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/Idponto_btn_Logradouro"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="Logradouros"
                    android:paddingStart="16dp"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorWhite"
                    android:background="@null"/>

                <ImageView
                    android:background="@drawable/ic_arrow_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="end|center_vertical"/>

            </FrameLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Idponto_edt_Barramento"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/edt_customizado"
                    android:hint="Barramento"
                    android:imeOptions="actionNext"
                    android:inputType="textAutoComplete"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:paddingStart="16dp"
                    android:fontFamily="@font/roboto_regular"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Idponto_edt_Medidor"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/edt_customizado"
                    android:hint="Medidor"
                    android:imeOptions="actionNext"
                    android:inputType="textAutoComplete"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:paddingStart="16dp"
                    android:fontFamily="@font/roboto_regular"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Idponto_edt_BarramentoProx"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/edt_customizado"
                    android:hint="Barramento Próximo"
                    android:imeOptions="actionNext"
                    android:inputType="textAutoComplete"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:paddingStart="16dp"
                    android:fontFamily="@font/roboto_regular"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Idponto_edt_MedidorProx"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/edt_customizado"
                    android:hint="Medidor Próximo"
                    android:imeOptions="actionDone"
                    android:inputType="textAutoComplete"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:paddingStart="16dp"
                    android:fontFamily="@font/roboto_regular"/>

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/Idponto_edt_gpsLat"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:enabled="false"
                            android:background="@drawable/edt_customizado"
                            android:hint="Latitude"
                            android:maxLength="100"
                            android:maxLines="1"
                            android:paddingStart="16dp"
                            android:fontFamily="@font/roboto_regular"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/Idponto_edt_gpsLong"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:enabled="false"
                            android:background="@drawable/edt_customizado"
                            android:hint="longitude"
                            android:maxLength="100"
                            android:maxLines="1"
                            android:paddingStart="16dp"
                            android:fontFamily="@font/roboto_regular"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:gravity="center">

                    <Button
                        android:id="@+id/Idponto_btn_GPS"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="GPS"
                        android:textAlignment="center"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/btn_ponto_cust" />

                </LinearLayout>

            </LinearLayout>

            <RadioButton
                android:id="@+id/Idponto_rb_alteracao"
                android:text="Alteração"
                android:checked="true"
                android:fontFamily="@font/roboto_regular"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"/>
            <RadioButton
                android:id="@+id/Idponto_rb_inclusao"
                android:text="Inclusão"
                android:fontFamily="@font/roboto_regular"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_ponto_cust"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/Idponto_btn_equipamentos"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="Equipamentos"
                    android:paddingStart="16dp"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorWhite"
                    android:background="@null" />

                <ImageView
                    android:background="@drawable/ic_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="end|center_vertical"/>

            </FrameLayout>

            <ListView
                android:id="@+id/Idponto_lista_item"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="gone"
                android:layout_marginTop="8dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_ponto_cust"
                android:layout_marginTop="8dp"
                android:elevation="10dp">

                <Button
                    android:id="@+id/Idponto_btn_salvar"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="Salvar"
                    android:paddingStart="16dp"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorWhite"
                    android:background="@null" />

                <ImageView
                    android:background="@drawable/ic_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="end|center_vertical"/>

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar_cicle"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

</FrameLayout>