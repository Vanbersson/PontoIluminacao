<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idedt_ponto_data"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/edt_customizado"
                    android:hint="Data"
                    android:maxLines="1"
                    android:maxLength="11"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:paddingStart="16dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idedt_ponto_barramento"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/edt_customizado"
                    android:hint="Barramento"
                    android:imeOptions="actionNext"
                    android:inputType="textAutoComplete"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:paddingStart="16dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idedt_ponto_cep"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/edt_customizado"
                    android:hint="CEP"
                    android:imeOptions="actionNext"
                    android:maxLength="14"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingStart="16dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idedt_ponto_logradouro"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/edt_customizado"
                    android:hint="Logradouro"
                    android:imeOptions="actionNext"
                    android:inputType="textAutoComplete"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:paddingStart="16dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/edt_customizado"
                    android:hint="Bairro"
                    android:imeOptions="actionNext"
                    android:inputType="textAutoComplete"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:paddingStart="16dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/edt_customizado"
                    android:hint="Distrito"
                    android:imeOptions="actionNext"
                    android:inputType="textAutoComplete"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:paddingStart="16dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/edt_customizado"
                    android:hint="Municipio"
                    android:imeOptions="actionNext"
                    android:inputType="textAutoComplete"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:paddingStart="16dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/edt_customizado"
                    android:hint="Complemento"
                    android:imeOptions="actionNext"
                    android:inputType="textAutoComplete"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:paddingStart="16dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            </com.google.android.material.textfield.TextInputLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/Idponto_btn_equipamento"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Equipamentos"
                    android:paddingStart="16dp"
                    android:textAlignment="textStart"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/btn_customizado_login" />

                <ImageView
                    android:id="@+id/arrow"
                    android:background="@drawable/ic_arrow_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="end|center_vertical"/>

            </FrameLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/edt_customizado"
                    android:hint="Login"
                    android:imeOptions="actionNext"
                    android:inputType="textAutoComplete"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:paddingStart="16dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>