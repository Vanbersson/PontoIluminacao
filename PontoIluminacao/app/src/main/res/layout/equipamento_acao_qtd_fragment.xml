<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EquipamentoAcaoQtdFragment"
    android:background="#bbdefb">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:text="Escolha o tipo de ação"
            android:fontFamily="@font/roboto_light"
            android:textSize="40px"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/Idbtn_equi_acao_add"
            android:text="Adicionar"
            android:textColor="@color/colorSecondaryText"
            android:textSize="40px"
            android:fontFamily="@font/roboto_regular"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_equi_add_rem_not"/>

        <Button
            android:id="@+id/Idbtn_equi_acao_rem"
            android:text="Remover"
            android:textColor="@color/colorSecondaryText"
            android:textSize="40px"
            android:fontFamily="@font/roboto_regular"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_equi_add_rem_not"/>

    </LinearLayout>

    <TextView
        android:text="Informe a quantidade"
        android:fontFamily="@font/roboto_light"
        android:textSize="40px"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/Idtv_qtd"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:text="0"
                    android:fontFamily="@font/roboto_thin"
                    android:textSize="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/btn_equi_qtd_cust">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_add"/>

                    <Button
                        android:id="@+id/Idbtn_qtd_add"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/btn_equi_qtd_cust">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_remove"/>

                    <Button
                        android:id="@+id/Idbtn_qtd_rem"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"/>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:text="Confirmar"
            android:id="@+id/Idbtn_confirmar"
            android:fontFamily="@font/roboto_regular"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/colorButton"
            android:textColor="@color/colorWhite"/>

    </FrameLayout>

</LinearLayout>